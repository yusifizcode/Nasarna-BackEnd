                                                <h2>Payment</h2>
                                                <div class="payment-area">
                                                    <div class="payment-by-card">
                                                        <div class="row">
                                                            <div
                                                                class="col-lg-6 col-md-12 col-12 mb-3 d-flex flex-column form-group">
                                                                <label asp-for="Donation.Card" class="mb-2 fw-bold">Card holder Name</label>
                                                                <input asp-for="Donation.Card" placeholder="" />
                                                                <span class="text-danger" asp-validation-for="Donation.Card"></span>
                                                            </div>
                                                            <div
                                                                class="col-lg-6 col-md-12 col-12 mb-3 d-flex flex-column form-group">
                                                                <label asp-for="Donation.CardNumber" class="mb-2 fw-bold">Card Number</label>
                                                                <input asp-for="Donation.CardNumber" placeholder="">
