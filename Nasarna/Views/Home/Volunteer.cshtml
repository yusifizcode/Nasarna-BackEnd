        <!-- Start of Become a Volunteer -->
        <section id="volunteer" class="section-padding">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="volunteer d-flex flex-column align-items-center">
                            <div class="shadow">
                                <div class="volunteer-img">
                                    <img src="~/assets/images/volunteer.jpg" alt="">
                                </div>
                            </div>
                            <div class="volunteer-contact">
                                <div class="volunteer-contact-form">
                                    <h2>Become a Volunteer</h2>
                                    <form action="" method="post">
                                        <form method="post" class="contact-validation-active" id="contact-form"
                                            novalidate="novalidate">
                                            <div class="row justify-content-center text-center">
                                                <div class="col-lg-6 col-md-6 col-sm-6 col-12 mb-3 form-group">
                                                    <input type="text" class="form-control" name="name" id="name"
                                                        placeholder="First Name">
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-6 col-12 mb-3 form-group">
                                                    <input type="email" class="form-control" name="email" id="email"
                                                        placeholder="Email">
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-6 col-12 mb-3 form-group">
                                                    <input type="text" class="form-control" name="subject" id="subject"
                                                        placeholder="Subject">
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-6 col-12 mb-3 mt-2">
                                                    <input id="file" type="file" class="form-control" name="file">
                                                </div>
                                                <div class="col-lg-12 col-12 form-group">
                                                    <textarea class="form-control" name="note" id="note" rows="6"
                                                        placeholder="Description..."></textarea>
                                                </div>
                                                <div class="form-btn col-lg-12 col-12">
                                                    <button type="submit" class="theme-btn submit-btn">Send
                                                        Message</button>
                                                </div>
                                            </div>
                                        </form>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Start of Become a Volunteer -->

